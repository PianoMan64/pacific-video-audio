@page "/products"

<PageTitle>Products - Pacific Video & Audio</PageTitle>

<section class="page-header">
    <div class="container">
        <h1>Our Products</h1>
        <p>Professional video and audio equipment for every need</p>
    </div>
</section>

<section class="products-section">
    <div class="container">
        <div class="product-categories">
            <div class="category-card">
                <div class="category-image">
                    <img src="/images/video-equipment.jpg" alt="Video Equipment" />
                </div>
                <div class="category-content">
                    <h3>Video Equipment</h3>
                    <p>Professional cameras, monitors, recording devices, and complete video production solutions for every budget and requirement.</p>
                    <a href="/products/video" class="btn btn-primary">Shop Video Equipment</a>
                </div>
            </div>
            
            <div class="category-card">
                <div class="category-image">
                    <img src="/images/audio-equipment.jpg" alt="Audio Equipment" />
                </div>
                <div class="category-content">
                    <h3>Audio Equipment</h3>
                    <p>High-quality microphones, mixers, speakers, and professional audio recording systems for crystal-clear sound.</p>
                    <a href="/products/audio" class="btn btn-primary">Shop Audio Equipment</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .page-header {
        background: #2c3e50;
        color: white;
        padding: 4rem 0;
        text-align: center;
    }
    
    .page-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    
    .page-header p {
        font-size: 1.2rem;
        color: #bdc3c7;
    }
    
    .products-section {
        padding: 4rem 0;
    }
</style>
